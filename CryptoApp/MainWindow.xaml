<Window x:Class="CryptoApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CryptoApp.ViewModels"
        mc:Ignorable="d"
        Title="CryptoApp" Height="450" Width="800">
    <!-- xmlns:local="clr-namespace:CryptoApp" -->
    <Window.DataContext>
        <local:CoinViewModel />
    </Window.DataContext>
    <!--
    <StackPanel>
        <TextBlock Text="Ціна Bitcoin:"/>
        <TextBlock x:Name="PriceTextBlock" Text=""/>
        <Button Content="Отримати ціну" Click="Button_Click"/>
    </StackPanel>
    -->
    <Grid>
        <ListView ItemsSource="{Binding CoinList}">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Name" DisplayMemberBinding="{Binding Name}"/>
                    <GridViewColumn Header="Symbol" DisplayMemberBinding="{Binding Symbol}"/>
                    <GridViewColumn Header="Current Price" DisplayMemberBinding="{Binding CurrentPrice, StringFormat='{}{0:C}'}"/>
                    <GridViewColumn Header="Market Cap" DisplayMemberBinding="{Binding MarketCap, StringFormat='{}{0:C}'}"/>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Window>
